<h1>This is the index view for Articles</h1>

<% @articles.each do |article| %>
<div>
<h3><%=article.title%></h3>

	<p>Published on <%= article.created_at.strftime('%b %d, %y')%></p>
	<p>Filed under 

	<% @categories = article.categories %>
	<% @categories.each do |cat| %>
		<%= cat.name %>
	<% end %>
	</p>
	<p>
	<%= truncate(article.content, length: 200)%>
	</p>

<% end %>